@page "/"
@using SkiaSharp.Views.Blazor
@using SkiaSharp;
@inject IJSRuntime JsRuntime;

<PageTitle>Blazor Snow Simulator</PageTitle>
@* <PageTitle>C64 Christmas 1982 Tribute</PageTitle> *@

<div id="canvasHolder" style="position: fixed; width: 100%; height: 100%; left: 0; top:0;
    user-select: none;
    cursor: crosshair;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color:black">
    <SKGLView @ref="bgView" id="bgCanvasView" OnPaintSurface="BGPaintSurface" style="position: absolute; width: 100%; height: 100%; left: 0; top: 0;" EnableRenderLoop="false" />
    <SKGLView @ref="glView" id="canvasView" OnPaintSurface="GLPaintSurface" @onmousemove="(args)=>OnMouseMove(args)" @onclick="OnMouseClick" style="position: absolute; width: 100%; height: 100%; left: 0; top: 0;" EnableRenderLoop="true" />
</div>

@* <img src="/C64_T.png" style="position:sticky; top:0;user-select: none" width="300" /> *@

<span style="position:sticky; top:0;user-select: none;float: right" @onclick="OnSwitch">❄️💧</span>
